[{"meta": {"id": "advisable", "uuid": "bc3d9526-8dd3-4006-8a89-1f2fd5ec4510", "sort": "011070000", "src": "collegiate", "section": "alpha", "stems": ["advisabilities", "advisability", "advisable", "advisableness", "advisablenesses", "advisably"], "offensive": false}, "hwi": {"hw": "ad*vis*able", "prs": [{"mw": "\u0259d-\u02c8v\u012b-z\u0259-b\u0259l", "sound": {"audio": "advisa01", "ref": "c", "stat": "1"}}]}, "fl": "adjective", "def": [{"sseq": [[["sense", {"dt": [["text", "{bc}fit to be {a_link|advised} or done {bc}{sx|prudent||}"]]}]]]}], "uros": [{"ure": "ad*vis*abil*i*ty", "prs": [{"mw": "\u0259d-\u02ccv\u012b-z\u0259-\u02c8bi-l\u0259-t\u0113", "sound": {"audio": "advisa02", "ref": "c", "stat": "1"}}], "fl": "noun"}, {"ure": "ad*vis*able*ness", "prs": [{"mw": "\u0259d-\u02c8v\u012b-z\u0259-b\u0259l-n\u0259s", "sound": {"audio": "advisa03", "ref": "c", "stat": "1"}}], "fl": "noun"}, {"ure": "ad*vis*ably", "prs": [{"mw": "\u0259d-\u02c8v\u012b-z\u0259-bl\u0113", "sound": {"audio": "advisa04", "ref": "c", "stat": "1"}}], "fl": "adverb"}], "syns": [{"pl": "synonyms", "pt": [["text", "{sc}expedient{/sc} {sc}politic{/sc} {sc}advisable{/sc} mean dictated by practical or prudent motives. {sc}expedient{/sc} usually implies what is immediately advantageous without regard for ethics or consistent principles. "], ["vis", [{"t": "a politically {it}expedient{/it} decision"}]], ["text", " {sc}politic{/sc} stresses judiciousness and tactical value but usually implies some lack of candor or sincerity. "], ["vis", [{"t": "a {it}politic{/it} show of interest"}]], ["text", " {sc}advisable{/sc} applies to what is practical, prudent, or advantageous but lacks the derogatory implication of {sc}expedient{/sc} and {sc}politic{/sc}. "], ["vis", [{"t": "sometimes it's {it}advisable{/it} to say nothing"}]]]}], "et": [["text", "{et_link|advise|advise} + {et_link|-able|-able}"]], "date": "1638", "shortdef": ["fit to be advised or done : prudent"]}]